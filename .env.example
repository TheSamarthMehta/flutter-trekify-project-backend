# Trekify Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=trekify

# JWT Configuration (IMPORTANT: Use a secure secret in production)
JWT_SECRET=your_secure_jwt_secret_key_must_be_at_least_32_characters_long
JWT_EXPIRY_DAYS=5

# Server Configuration
PORT=5000
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://0.0.0.0:5000

# Logging Level
LOG_LEVEL=Information

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:4200

# Excel Data File Path (relative to TrekifyBackend directory)
EXCEL_DATA_PATH=../data/Flutter Data Set.xlsx

# Production Example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trekify?retryWrites=true&w=majority
# JWT_SECRET=production_secret_key_should_be_very_long_and_secure_32_chars_minimum
# ASPNETCORE_ENVIRONMENT=Production
# ASPNETCORE_URLS=http://0.0.0.0:$PORT
# ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.com
